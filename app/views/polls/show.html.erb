<div class="mx-auto w-full flex max-w-xl">
  <div class="mx-auto w-full">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <% if alert.present? %>
      <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block" id="notice"><%= alert %></p>
    <% end %>

    <% if @voted %>
      <%= turbo_stream_from @poll %>
    <% end %>

    <%= render @poll, voted: @voted %>

    <%#= link_to 'Edit this poll', edit_poll_path(@poll), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%# <div class="inline-block ml-2"> %>
      <%#= button_to 'Destroy this poll', poll_path(@poll), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    <%# </div> %>
    <%#= link_to 'Back to polls', polls_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
